{
  "name": "@se-2/hardhat",
  "version": "0.0.1",
  "scripts": {
    "account": "hardhat run scripts/listAccount.ts",
    "account:generate": "hardhat run scripts/generateAccount.ts",
    "account:import": "hardhat run scripts/importAccount.ts",
    "account:reveal-pk": "hardhat run scripts/revealPK.ts",
    "chain": "hardhat node --network hardhat --no-deploy",
    "check-types": "tsc --noEmit --incremental",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "deploy": "ts-node scripts/runHardhatDeployWithPK.ts",
    "deploy:sepolia": "hardhat deploy --network sepolia",
    "flatten": "hardhat flatten",
    "fork": "MAINNET_FORKING_ENABLED=true hardhat node --network hardhat --no-deploy",
    "format": "prettier --write \"./**/*.{ts,sol}\"",
    "generate": "yarn account:generate",
    "hardhat-verify": "hardhat verify",
    "lint": "eslint . --ext .ts,.js",
    "lint-staged": "lint-staged",
    "test": "REPORT_GAS=true hardhat test --network hardhat",
    "prepare": "husky",
    "verify": "hardhat etherscan-verify",
    "coverage": "npx hardhat coverage",
    "fix-deps": "ts-node scripts/fix-dependencies.ts",
    "update-deployments": "ts-node scripts/updateDeployments.ts"
  },
  "devDependencies": {
    "@aashutoshrathi/word-wrap": "^1.2.6",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.9",
    "@nomicfoundation/hardhat-ethers": "^3.0.9",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.11",
    "@nomicfoundation/hardhat-verify": "^2.0.10",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/eslint": "^9.6.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/prettier": "^3.0.0",
    "@types/qrcode": "^1.5.5",
    "@types/semver": "^7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "chai": "^4.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.4",
    "ethers": "^6.15.0",
    "hardhat": "^2.25.0",
    "hardhat-deploy": "^1.0.4",
    "hardhat-deploy-ethers": "^0.4.2",
    "hardhat-gas-reporter": "^2.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "lru-cache": "^7.18.3",
    "prettier": "^3.5.3",
    "prettier-plugin-solidity": "^1.4.1",
    "semver": "^7.5.4",
    "solidity-coverage": "^0.8.15",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@inquirer/password": "^4.0.2",
    "@openzeppelin/contracts": "^5.0.2",
    "@typechain/ethers-v6": "^0.5.1",
    "dotenv": "^16.6.1",
    "envfile": "^7.1.0",
    "qrcode": "^1.5.4",
    "typechain": "^8.3.2",
    "typescript": "^5.8.3",
    "web3-utils": "1"
  }
}
